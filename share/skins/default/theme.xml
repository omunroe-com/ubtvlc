<Theme>
    <ThemeInfo name="VLC" author="Emmanuel Puig"
            email="magic@karibu.org" webpage=""/>

  <Bitmap id="body" file="body.bmp" alphacolor="#FF0000"/>

  <Bitmap id="prev1" file="prev1.bmp" alphacolor="#FF0000"/>
