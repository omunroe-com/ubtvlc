+if test "${cross_prefix}" = "i586-pc-beos-"; then
+  # Cross-compiling from Linux for BeOS
+  CFLAGS="$CFLAGS -DPIC -fomit-frame-pointer -fno-expensive-optimizations"
+  SHFLAGS=-nostart
+  audio_oss="no"
+  v4l="no"
+  dv1394="no"
+  netserver="yes"
+  need_inet_aton="yes"
+  extralibs="-lnet"
+fi
+
 if test -z "$cross_prefix" ; then
 
 # ---
