   A /trunk/modules/visualization/Modules.am
   M /trunk/modules/visualization/scope/Modules.am
   M /trunk/modules/visualization/xosd/Modules.am
   M /trunk/po/POTFILES.in
   M /trunk/po/de.po
   M /trunk/po/en_GB.po
   M /trunk/po/fr.po
   M /trunk/po/it.po
   M /trunk/po/ja.po
